<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <integer-array name="progress_bar_colors_theme">
        <item>@color/teal</item>
    </integer-array>

    <style name="IndigoProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/teal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <declare-styleable name="DiagonalImageView">
        <attr format="enum" name="di_position">
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="4"/>
            <enum name="left" value="8"/>
        </attr>
        <attr format="enum" name="di_direction">
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="4"/>
            <enum name="left" value="8"/>
        </attr>
        <attr format="dimension" name="di_overlap"/>
        <attr format="dimension" name="di_borderSize"/>
        <attr format="color" name="di_borderColor"/>
        <attr format="boolean" name="di_borderEnabled"/>
    </declare-styleable>
</resources>
